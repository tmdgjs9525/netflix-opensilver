<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:netflix_opensilver.Themes.Units">
    <Style TargetType="units:VideoPreview">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:VideoPreview">
                    <StackPanel Margin="10,0,0,0">
                        <StackPanel.Effect>
                            <DropShadowEffect
                                BlurRadius="4"
                                Direction="135"
                                Opacity="0.5"
                                ShadowDepth="4"
                                Color="Black" />
                        </StackPanel.Effect>
                        <Image Source="{Binding PosterUrl}" />
                        <StackPanel Background="#181818" Orientation="Vertical">
                            <units:IconButton
                                HorizontalAlignment="Left"
                                Background="White"
                                CornerRadius="100"
                                Fill="Black"
                                FontSize="24"
                                Foreground="Black"
                                Icon="M8,5.14V19.14L19,12.14L8,5.14Z"
                                IconSize="24"
                                UseText="False" />
                        </StackPanel>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
