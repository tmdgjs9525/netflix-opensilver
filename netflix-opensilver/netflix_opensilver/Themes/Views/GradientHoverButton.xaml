<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:netflix_opensilver.Themes.Units">
    <Storyboard x:Name="MouseEnterStoryboard">
        <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" Duration="0:0:0.2" />
    </Storyboard>

    <Storyboard x:Name="MouseLeaveStoryboard">
        <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" Duration="0:0:0.2" />
    </Storyboard>

    <Style TargetType="units:GradientHoverButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:GradientHoverButton">
                    <Border
                        x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
